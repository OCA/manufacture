<odoo>

    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.line_description</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='bom_line_ids']/tree//field[@name='product_id']" position="after">
                <field name="description"/>
            </xpath>
        </field>
    </record>

    <record id="mrp_bom_line_view_form" model="ir.ui.view">
        <field name="name">mrp.bom.line.view.form.description</field>
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="description"/>
            </field>
        </field>
    </record>

</odoo>
