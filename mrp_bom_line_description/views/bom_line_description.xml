<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="bom_line_description_view_form" model="ir.ui.view">
        <field name="model">bom.line.description</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="description" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="bom_line_description_view_tree" model="ir.ui.view">
        <field name="model">bom.line.description</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

    <record id="bom_line_description_action" model="ir.actions.act_window">
        <field name="name">Bom Line Description</field>
        <field name="res_model">bom.line.description</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <menuitem
        id="bom_line_description_menu"
        action="bom_line_description_action"
        sequence="50"
        parent="mrp.menu_mrp_bom"
    />


</odoo>
