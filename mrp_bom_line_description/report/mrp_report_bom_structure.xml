<odoo>

    <template id="report_mrp_bom_line" inherit_id="mrp.report_mrp_bom_line">
        <xpath expr="//tr/td[1]" position="inside">
            <t t-if="l.get('description')">
                <br/>
                <span t-att-style="space_td"/>
                <span t-att-class="None if l['child_bom'] else 'o_mrp_bom_no_fold'" t-esc="l['description']"/>
            </t>
        </xpath>
    </template>

    <template id="report_mrp_bom_pdf_line" inherit_id="mrp.report_mrp_bom_pdf_line">
        <xpath expr="//tr/td[1]" position="inside">
            <t t-if="l.get('description')">
                <br/>
                <span t-att-style="space_td"/>
                <span t-esc="l['description']"/>
            </t>
        </xpath>
    </template>

</odoo>
