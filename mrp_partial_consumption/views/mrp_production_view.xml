<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="mrp_production_view_form" model="ir.ui.view">
        <field name="name">mrp.production.view.form</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_unbuild']" position="after">
                <button
                    name="button_partial_consumption"
                    type="object"
                    string="Partial Consumption"
                    confirm="This will consume all reserved quantities for the raw materials. Do you want to continue?"
                    attrs="{'invisible': [('state', '!=', 'progress')]}"
                    groups="mrp_partial_consumption.group_mrp_partial_consumption"
                />
            </xpath>
        </field>
    </record>

</odoo>
