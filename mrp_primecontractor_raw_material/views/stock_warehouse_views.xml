<odoo>

  <record id="view_warehouse" model="ir.ui.view">
    <field name="model">stock.warehouse</field>
    <field name="inherit_id" ref="stock.view_warehouse" />
    <field name="arch" type="xml">
      <xpath expr="//page[@name='warehouse_config']/group" position="inside">
        <group
                    name="primecontractor_raw_material"
                    string="Primecontractor Raw Material"
                >
          <field name="primecontractor_raw_material" />
        </group>
      </xpath>
      <xpath expr="//field[@name='lot_stock_id']" position="after">
        <field
                    name="primecontractor_view_location_id"
                    readonly="1"
                    attrs="{'invisible': [('primecontractor_raw_material', '=', False)]}"
                />
        <field
                    name="wh_primecontractor_stock_loc_ids"
                    readonly="1"
                    attrs="{'invisible': [('primecontractor_raw_material', '=', False)]}"
                    widget="many2many_tags"
                />
      </xpath>
      <xpath expr="//field[@name='in_type_id']" position="after">
        <field
                    name="primecontractor_in_type_id"
                    readonly="1"
                    attrs="{'invisible': [('primecontractor_raw_material', '=', False)]}"
                />
      </xpath>
    </field>
  </record>

</odoo>
