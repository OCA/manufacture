<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>


        <record id="mrp_bom_form_view" model="ir.ui.view">
            <field name="name">mrp.bom.form</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_form_view"/>
            <field name="arch" type="xml">
                <xpath
                        expr="//notebook/page/field[@name='bom_lines']/tree//field[@name='product_id']" position="before">
                    <field name="has_child"/>
                </xpath>
            </field>
        </record>

       <record id="mrp_bom_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.tree</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.mrp_bom_tree_view"/>
            <field name="field_parent">child_complete_ids</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="has_child"/>
                </xpath>
            </field>
        </record>

       <record id="mrp_bom_component_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.component.tree</field>
            <field name="model">mrp.bom</field>
           <field name="inherit_id" ref="mrp.mrp_bom_component_tree_view"/>
            <field name="field_parent">child_complete_ids</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="is_parent"/>
                    <field name="has_child"/>
                </xpath>
            </field>
        </record>

        <record id="view_mrp_bom_filter" model="ir.ui.view">
            <field name="name">mrp.bom.select</field>
            <field name="model">mrp.bom</field>
            <field name="inherit_id" ref="mrp.view_mrp_bom_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="before">
                    <field name="complete_bom_hierarchy_code"/>
                    <field name="complete_bom_hierarchy_name"/>
                    <field name="bom_id"/>
                    <field name="is_parent"/>
                    <filter string="Parent BOM" name="parent_bom"
                            domain="[('is_parent','=','True')]"/>
                </xpath>
            </field>
        </record>

       <record id="mrp_bom_hierarchy_tree_view" model="ir.ui.view">
            <field name="name">mrp.bom.tree</field>
            <field name="model">mrp.bom</field>
            <field name="field_parent">child_complete_ids</field>
            <field name="arch" type="xml">
                <tree string="Bill of Materials" editable="top"
                      colors="blue:method">
                    <button string="Parent BOM"
                        name="action_openParentTreeView"
                        type="object"
                        icon="STOCK_GO_UP"
                        attrs="{'invisible': [('bom_id', '=', False)]}"/>
                    <button string="Child BOMs"
                        name="action_openChildTreeView"
                        type="object"
                        icon="STOCK_GO_DOWN"/>
                    <field name="complete_bom_hierarchy_code"/>
                    <field name="bom_hierarchy_indent"/>
                    <field name="name"/>
                    <field name="bom_id"/>
                    <field name="sequence"/>
                    <field name="code"/>
                    <field name="position"/>
                    <field name="has_child"/>
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="product_uom" groups="product.group_uom"/>
                    <field name="type"/>
                    <field name="method"/>
                    <field name="routing_id" groups="mrp.group_mrp_routings"/>
                    <field name="date_start"/>
                    <field name="date_stop"/>
                </tree>
            </field>
        </record>

        <record id="action_mrp_bom_hierarchy_tree" model="ir.actions.act_window">
            <field name="name">Bill of Material Hierarchy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.bom</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="mrp_bom_hierarchy_tree_view"/>
            <field name="domain">[]</field>
            <field name="context">{'search_default_is_parent':True}</field>
        </record>

        <record id="action_mrp_bom_hierarchy_tree2"
                model="ir.actions.act_window">
            <field name="name">Bill of Material Hierarchy</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">mrp.bom</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="mrp_bom_hierarchy_tree_view"/>
            <field name="domain">[]</field>
        </record>

        <menuitem
            action="action_mrp_bom_hierarchy_tree"
            id="menu_mrp_bom_hierarchy_form_action"
            parent="mrp.menu_mrp_bom"
            sequence="11"/>

    </data>
</openerp>
