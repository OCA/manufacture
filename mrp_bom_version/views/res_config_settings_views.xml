<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp.version</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="35" />
        <field name="inherit_id" ref="mrp.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-string='Manufacturing']" position="inside">
                <h2>BoM Version</h2>
                <div class="row mt16 o_settings_container">
                    <div
            class="col-lg-6 col-12 o_setting_box"
            id="bom_version"
            title="BoM Version"
          >
                        <div class="o_setting_left_pane">
                            <field name="group_mrp_bom_version" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_mrp_bom_version" />
                            <div class="text-muted">
                               The active state may be passed back to state draft
                            </div>
                        </div>
                    </div>
                    <div
            class="col-12 col-lg-6 o_setting_box"
            id="bom_back_to_draft"
            attrs="{'invisible':[('group_mrp_bom_version', '=', False)]}"
          >
                        <div class="o_setting_left_pane">
                            <field name="bom_active_draft" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="bom_active_draft" />
                            <div class="text-muted">
                                This will allow you to define if those BoM passed back to draft are still activated or not
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
