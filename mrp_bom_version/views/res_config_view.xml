<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form_versioning">
        <field name="name">res.config.settings.versioning</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="work_order" position="after">
                <div class="col-md-6 col-xs-12 o_setting_box" id="group_mrp_bom_version" title="">
                    <div class="o_setting_left_pane">
                        <field name="group_mrp_bom_version"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_mrp_bom_version"/>
                        <div class="text-muted">
                            The active state may be passed back to state draft.
                        </div>
                        <div class="content-group" attrs="{'invisible': [('group_mrp_bom_version','=',False)]}">
                            <div id="active_draft" class="mt16">
                                <field name="active_draft" class="oe_inline"/>
                                <label string="Keep re-editing BoM active." class="o_light_label" for="active_draft"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
