<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="res_config_settings_view_form_versioning">
        <field name="name">res.config.settings.versioning</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="mrp.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="work_order" position="inside">
                <div class="o_setting_left_pane">
                    <field name="group_mrp_bom_version"/>
                </div>
                <div class="o_setting_right_pane">
                    <label for="group_mrp_bom_version"/>
                    <div class="text-muted">
                        Allow to re-edit BoMs.
                        The active state may be passed back to state draft.
                    </div>
                    <div class="content-group" attrs="{'invisible': [('group_mrp_bom_version','=',False)]}">
                        <div class="mt16" >
                            Keep re-editing BoM active.
                            This will allow you to define whether those BoM passed back to draft
                            can still be re-activated or not.
                            <field name="active_draft"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
