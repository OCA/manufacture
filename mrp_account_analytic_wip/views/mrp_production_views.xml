<odoo>
    <record id="mrp_production_form_ext" model="ir.ui.view">
        <field name="name">Manufacturing Order: add Tracking Items</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <button name="button_plan" position="after">
                <button
                    name="action_post_inventory_wip"
                    type="object"
                    string="Post WIP"
                    attrs="{'invisible': [('state', 'in', ('draft', 'confirmed', 'done', 'cancel'))]}"
                />
            </button>
            <div name="button_box" position="inside">

                <field name="analytic_tracking_item_count" invisible="1" />
                <field name="currency_id" invisible="1" />
                <button
                    class="oe_stat_button"
                    name="action_view_analytic_tracking_items"
                    type="object"
                    icon="fa-hourglass-half"
                    attrs="{'invisible': [('analytic_tracking_item_count', '=', 0)]}"
                >
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value">
                            <field
                                name="analytic_tracking_item_amount"
                                widget="monetary"
                                options="{'currency_field': 'currency_id'}"
                            />
                        </span>
                        <span class="o_stat_text">WIP Actual</span>
                    </div>
                </button>

            </div>
            <!-- Highlight expected quantities (populated from the BOM) -->
            <xpath
                expr="//page[@name='components']/field/tree/field[@name='product_id']"
                position="attributes"
            >
                <attribute name="decoration-bf">product_uom_qty</attribute>
            </xpath>
            <xpath
                expr="//page[@name='components']/field/tree/field[@name='product_uom_qty']"
                position="attributes"
            >
                <attribute name="decoration-bf">product_uom_qty</attribute>
            </xpath>
            <xpath expr="//field[@name='move_raw_ids']/tree" position="inside">
                <field name="qty_planned" invisible="1" />
            </xpath>

            <!-- Don't allow deleting lines, to avoid wrong WIP Planned amounts -->
            <xpath expr="//field[@name='move_raw_ids']/tree" position="attributes">
                <attribute name="delete">0</attribute>
            </xpath>

        </field>
    </record>
</odoo>
