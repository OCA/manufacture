<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_production_filter" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <filter name="starred" position="after">
                <separator />
                <filter
                    string="SCH waiting"
                    name="sch_waiting"
                    domain="[('schedule_state','=','waiting')]"
                />
                <filter
                    string="SCH todo"
                    name="sch_todo"
                    domain="[('schedule_state','=','todo')]"
                />
                <filter
                    string="SCH scheduled"
                    name="sch_scheduled"
                    domain="[('schedule_state','=','scheduled')]"
                />
            </filter>
        </field>
    </record>
    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="context">
            {'search_default_sch_todo': True, 'search_default_ready': True}
        </field>
    </record>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_unreserve']" position="after">
                <button
                    name="%(mrp_schedule_state.action_switch_schedule)d"
                    type="action"
                    string="Schedule"
                    groups="mrp.group_mrp_manager"
                />
            </xpath>
            <field name="user_id" position="before">
                <field name="schedule_state" />
            </field>
            <xpath
                expr="//page[@name='miscellaneous']/group[1]/group[1]"
                position="inside"
            >
                <field name="schedule_user_id" readonly="1" />
            </xpath>
        </field>
    </record>
    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='do_unreserve']" position="after">
                <button
                    name="%(mrp_schedule_state.action_switch_schedule)d"
                    type="action"
                    string="Schedule"
                    groups="mrp.group_mrp_manager"
                />
            </xpath>
            <field name="date_planned_start" position="after">
                <button
                    name="iter_selection_next"
                    context="{'selection_field': 'schedule_state'}"
                    class="Schedule"
                    type="object"
                    title="Next Schedule"
                    groups="mrp.group_mrp_manager"
                />
                <field name="schedule_state" />
                <!--You also may display this button to rotate in reverse way-->
                <!--
                <button name="iter_selection_prev"
                        string="previous scheduled state"
                        context="{'selection_field': 'schedule_state'}"
                        icon="gtk-go-back"
                        type="object"/>
                -->
            </field>
        </field>
    </record>
    <record id="mrp_production_workorder_tree_view" model="ir.ui.view">
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workorder_tree_view" />
        <field name="arch" type="xml">
            <field name="workcenter_id" position="before">
                <field name="schedule_mo" />
                <button
                    name="iter_selection_next"
                    context="{'selection_field': 'schedule_state'}"
                    class="fa fa-arrow-right"
                    title="Next Schedule"
                    type="object"
                />
                <field name="schedule_state" />
            </field>
        </field>
    </record>
</odoo>
