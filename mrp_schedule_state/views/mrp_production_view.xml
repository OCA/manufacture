<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_mrp_production_filter" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.view_mrp_production_filter" />
        <field name="arch" type="xml">
            <filter name="filter_cancel" position="after">
                <separator />
                <filter
                    string="SCH waiting"
                    name="sch_waiting"
                    domain="[('schedule_state','=','waiting')]"
                />
                <filter
                    string="SCH todo"
                    name="sch_todo"
                    domain="[('schedule_state','=','todo')]"
                />
                <filter
                    string="SCH scheduled"
                    name="sch_scheduled"
                    domain="[('schedule_state','=','scheduled')]"
                />
            </filter>
        </field>
    </record>
    <record id="mrp.mrp_production_action" model="ir.actions.act_window">
        <field name="context">
            {'search_default_sch_todo': True}
        </field>
    </record>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_unreserve']" position="after">
                <button
                    name="%(mrp_schedule_state.action_switch_schedule)d"
                    type="action"
                    string="Schedule"
                    groups="mrp.group_mrp_manager"
                />
            </xpath>
            <field name="user_id" position="before">
                <field name="schedule_state" readonly="1" />
            </field>
            <field name="date_planned_start" position="after">
                <field name="schedule_date" readonly="1" optional="show" />
            </field>
            <field name="date_planned_start" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <xpath
                expr="//page[@name='miscellaneous']/group[1]/group[1]"
                position="inside"
            >
                <field name="schedule_user_id" readonly="1" />
            </xpath>
        </field>
    </record>
    <record id="mrp_production_tree_view" model="ir.ui.view">
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_tree_view" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='do_unreserve']" position="after">
                <button
                    name="%(mrp_schedule_state.action_switch_schedule)d"
                    type="action"
                    string="Schedule"
                    groups="mrp.group_mrp_manager"
                />
            </xpath>
            <field name="date_planned_start" position="after">
                <field name="schedule_date" />
                <button
                    name="next_schedule_state"
                    class="fa fa-arrow-right"
                    title="Schedule/Unschedule"
                    type="object"
                />
                <field name="schedule_state" />
            </field>
            <field name="date_planned_start" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
        </field>
    </record>

</odoo>
