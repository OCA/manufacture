<odoo>
    <data>
        <record id="subcontracting_view_product_form" model="ir.ui.view">
            <field name="name">subcontracting.view.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <!-- displays a tick whether the service can be subcontracted -->
                <xpath expr="//group[@name='group_general']/field[@name='type']" position="after">
                    <field name="type_subcontracting" attrs="{'invisible': [('type','not in', ['service'])]}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
