<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.common.qc</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field
            name="groups_id"
            eval="[(4, ref('quality_control_oca.group_quality_control_user'))]"
        />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    class="oe_inline oe_stat_button"
                    type="object"
                    name="button_qc_inspection_per_product"
                    icon="fa-list"
                    context="{'qc_status': 'all'}"
                >
                    <field
                        name="created_inspections"
                        widget="statinfo"
                        string="inspections"
                    />
                </button>
                <button
                    class="oe_inline oe_stat_button"
                    type="object"
                    name="button_qc_inspection_per_product"
                    icon="fa-pencil"
                    context="{'qc_status': 'done'}"
                >
                    <field
                        name="done_inspections"
                        widget="statinfo"
                        string="inspections"
                    />
                </button>
                <button
                    class="oe_inline oe_stat_button"
                    type="object"
                    name="button_qc_inspection_per_product"
                    icon="fa-thumbs-o-up"
                    context="{'qc_status': 'passed'}"
                >
                    <field
                        name="passed_inspections"
                        widget="statinfo"
                        string="inspections"
                    />
                </button>
                <button
                    class="oe_inline oe_stat_button"
                    type="object"
                    name="button_qc_inspection_per_product"
                    icon="fa-thumbs-o-down"
                    context="{'qc_status': 'failed'}"
                >
                    <field
                        name="failed_inspections"
                        widget="statinfo"
                        string="inspections"
                    />
                </button>
            </div>
            <page name="inventory" position="inside">
                <group name="qc" string="Quality control">
                    <field name="qc_triggers" nolabel="1">
                        <tree editable="bottom">
                            <field
                                name="trigger"
                                options="{'no_create': True, 'no_edit': True, 'no_open': True}"
                            />
                            <field name="test" />
                            <field name="user" />
                            <field name="partners" widget="many2many_tags" />
                        </tree>
                    </field>
                </group>
            </page>
        </field>
    </record>
</odoo>
