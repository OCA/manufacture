<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.mrp</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='mrp_byproduct']" position="after">
                <div
                    class="col-lg-6 col-12 o_setting_box"
                    id="use_validation_on_success_qc"
                >
                    <div class="o_setting_left_pane">
                        <field name="use_validation_on_success_qc" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="use_validation_on_success_qc" />
                        <div class="text-muted">
                            Enable for use Tier Validation on successed quality control
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
