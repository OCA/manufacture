<odoo>
    <!-- Add a second button for Dismantling BoM -->
    <record id="product_form_dismanling_button" model="ir.ui.view">
        <field name="model">product.product</field>
        <field name="inherit_id" ref="mrp.product_product_form_view_bom_button"/>
        <field name="arch" type="xml">
            <button name="action_view_bom" position="after">
                <button class="oe_stat_button" name="action_view_dismantling_bom" type="object"
                        attrs="{'invisible':[('type', 'not in', ['product', 'consu'])]}" icon="fa-gavel">
                    <field string="Dismantling" name="dismantling_bom_count" widget="statinfo"/>
                </button>
            </button>
        </field>
    </record>
</odoo>
