<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_form_state_subcontracted" model="ir.ui.view">
        <field name="name">stock.picking.form.view.state.subcontracted</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <data>
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="statusbar_visible">
                        draft,subcontracted,confirmed,assigned,done
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('state', 'not in', ('assigned', 'confirmed',
                        'partially_available', 'draft', 'subcontracted','waiting'))]}
                    </attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm']" position="attributes">
                    <attribute name="attrs">
                        {'invisible': [('state', 'not in', ['subcontracted',
                        'draft']),('show_mark_as_todo', '=', False)]}
                    </attribute>
                </xpath>
            </data>
        </field>
    </record>
</odoo>
