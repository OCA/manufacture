<?xml version="1.0" encoding="utf-8" ?>
<odoo>

	<record id="mrp_production_form_view_inherit_mrp_group" model="ir.ui.view">
		<field name="name">mrp.production.form.view.inherit.mrp.group</field>
		<field name="model">mrp.production</field>
		<field name="inherit_id" ref="mrp.mrp_production_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//div[@name='bom_div']" position="after">
				<field
                    name="mrp_group_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color','no_create_edit': True}"
                    readonly="state == 'done'"
                />
			</xpath>
		</field>
	</record>
	
	<record id="mrp_production_tree_view_inherit_mrp_group" model="ir.ui.view">
		<field name="name">mrp.production.tree.view.inherit.mrp.group</field>
		<field name="model">mrp.production</field>
		<field name="inherit_id" ref="mrp.mrp_production_tree_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field
                    name="mrp_group_ids"
                    widget="many2many_tags"
                    options="{'color_field': 'color','no_create_edit': True}"
                />
			</xpath>
		</field>
	</record>
	
	<record id="mrp_production_search_view_inherit_mrp_group" model="ir.ui.view">
		<field name="name">mrp.production.search.view.inherit.mrp.group</field>
		<field name="model">mrp.production</field>
		<field name="inherit_id" ref="mrp.view_mrp_production_filter" />
		<field name="arch" type="xml">
		<xpath expr="//filter[@name='date']" position="after">
			<field name="mrp_group_ids" />
			<filter
                    name="mrp_group_ids"
                    string="MRP Groups"
                    context="{'group_by':'mrp_group_ids'}"
                />
		</xpath>
		</field>
	</record>
</odoo>
