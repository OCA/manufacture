<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="substitute_workcenter_form_view" model="ir.ui.view">
        <field name="model">substitute.workcenter</field>
        <field name="arch" type="xml">
            <form string="Substitute Workcenter">
                <group>
                    <!-- <p colspan="4">Replace selected workcenters by another one.</p> -->
                    <field name="workcenter_id" />
                </group>
                <footer>
                    <button
                        name="substitute_workcenter"
                        string="Apply"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button special="cancel" string="Cancel" class="oe_link" />
                </footer>
            </form>
        </field>
    </record>
    <record id="action_substitute_workcenter" model="ir.actions.act_window">
        <field name="name">Substitute Workcenter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">substitute.workcenter</field>
        <field name="view_mode">tree,form</field>
        <field name="binding_view_types">form,list</field>
        <field name="view_id" ref="substitute_workcenter_form_view" />
        <field name="target">new</field>
        <field name="binding_model_id" ref="mrp.model_mrp_workorder" />
    </record>
</odoo>
