<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--
            <xpath expr="/tree" position="attributes">
                <attribute name="colors">
                    red:load>0 and online==False;grey:online==False
                </attribute>
            </xpath>
        -->

    <record id="mrp_workcenter_tree_view" model="ir.ui.view">
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_tree_view" />
        <field name="arch" type="xml">
            <field name="company_id" position="before">
                <field name="load" widget="float_time" sum="Load" />
                <field name="capacity" widget="float_time" sum="Capacity" />
                <field name="date_end" />
                <button
                    name="set_online"
                    title="Click to set online => will be used in capacity computation"
                    class="fa fa-toggle-off"
                    attrs="{'invisible': [('online', '=', True)]}"
                    type="object"
                />
                <button
                    name="set_offline"
                    title="Click to set offline => workcenters children will also be set offline"
                    class="fa fa-toggle-on"
                    attrs="{'invisible': [('online', '=', False)]}"
                    type="object"
                />
                <field name="online" invisible="1" />
            </field>
        </field>
    </record>

</odoo>
