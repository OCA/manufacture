<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="action_show_line_info" model="ir.actions.client">
    <field name="name">Input line information</field>
    <field name="tag">mrp_bom_configurable.input_line</field>
</record>

<record id='input_line_tree' model='ir.ui.view'>
    <field name='model'>input.line</field>
    <field name='arch' type='xml'>
        <tree editable="bottom" multi_edit="1">
            <field name="sequence" widget="handle" />
            <button name="ui_clone" class="fa fa-clone" type="object" title="Clone" />
            <button
                    name="%(action_show_line_info)d"
                    class="fa fa-eye"
                    type="action"
                    title="Info"
                />
            <button
                    name="ui_configure"
                    class="fa fa-gear"
                    type="object"
                    title="Configure"
                />
            <field name="name" />
            <field name="count" />
            <field name="alert" optional="show" />
            <field name="comment" optional="show" />
            <field name="checked" optional="hide" />
            <field name="config_id" invisible="1" />
        </tree>
    </field>
</record>

<record id="input_line_search" model="ir.ui.view">
    <field name="model">input.line</field>
    <field name="arch" type="xml">
        <search>
            <filter name="name" />
            <filter
                    name="config_id"
                    string="Config"
                    domain="[]"
                    context="{'group_by' : 'config_id'}"
                />
            <filter
                    name="bom_id"
                    string="Bom"
                    domain="[]"
                    context="{'group_by' : 'bom_id'}"
                />
        </search>
    </field>
</record>

</odoo>
