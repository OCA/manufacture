<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="configuration_type" />
            </field>
            <xpath
                expr="//field[@name='bom_line_ids']/tree/field[@name='product_qty']"
                position="after"
            >
                <field name="domain" />
                <field name="condition" />
            </xpath>
        </field>
    </record>

    <record id="mrp.mrp_bom_form_action" model="ir.actions.act_window">
        <field name="context">{'default_company_id': allowed_company_ids[0], 'search_default_variable': True, 'search_default_configured': False}</field>
    </record>

    <record id="view_mrp_bom_filter" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.view_mrp_bom_filter" />
        <field name="arch" type="xml">
            <filter name="phantom" position="after">
                <filter string="Variable" name="variable" domain="[('configuration_type', '=', 'variable')]"/>
                <filter string="Configured" name="configured" domain="[('configuration_type', '=', 'configured')]"/>
            </filter>
        </field>
    </record>

    <record id="mrp_bom_tree_view" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_tree_view" />
        <field name="arch" type="xml">
            <field name="product_qty" position="before">
                <field name="configuration_type" optional="hide" />
            </field>
        </field>
    </record>

    <record id="mrp_bom_line_view_form" model="ir.ui.view">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form" />
        <field name="arch" type="xml">
            <field name="product_id" position="after">
                <field name="domain" />
                <field name="condition" optional="hide" />
            </field>
        </field>
    </record>
</odoo>
