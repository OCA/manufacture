<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_repair_line_update_vendor_to_refund_qty" model="ir.ui.view">
        <field name="name">Repair Line Update Vendor To Refund Qty</field>
        <field name="model">repair.line.update.vendor.to.refund.qty</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
             <form string="Update Qty to Refund">
                <group>
                    <field name="vendor_to_refund_qty" />
                </group>
                 <newline />
                 <footer>
                     <button
                        name="button_confirm"
                        string="Confirm"
                        type="object"
                        class="oe_highlight"
                    />
                     <button special="cancel" string="Cancel" class="oe_link" />
                 </footer>
            </form>
        </field>
    </record>

    <record
        id="action_repair_line_update_vendor_to_refund_qty"
        model="ir.actions.act_window"
    >
        <field name="name">Update Qty To Refund in Repair Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">repair.line.update.vendor.to.refund.qty</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="repair.model_repair_line" />
    </record>

</odoo>
