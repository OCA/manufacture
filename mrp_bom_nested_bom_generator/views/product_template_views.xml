<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.inherited.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page
                    string="Nested BOM"
                    name="nested_boms"
                    groups="mrp.group_mrp_user"
                >
                    <field
                        name="nested_bom_ids"
                        widget="one2many"
                        context="{'default_parent_id': id}"
                    >
                        <tree string="Nested BOMs" editable="bottom">
                            <field name="parent_id" invisible="1" />
                            <field name="all_attribute_ids" invisible="1" />
                            <field name="sequence" widget="handle" />
                            <field name="product_tmpl_id" />
                            <field name="product_qty" />
                            <field name="uom_id" />
                            <field
                                name="attribute_ids"
                                widget="many2many_tags"
                                options="{'no_create': True}"
                                domain="[('id', 'in', all_attribute_ids)]"
                            />
                        </tree>
                    </field>
                    <field name="nested_bom_count" invisible="1" />
                    <button
                        name="action_generate_nested_boms"
                        string="Generate Nested BOMs"
                        type="object"
                        class="oe_highlight o_expense_submit"
                        attrs="{'invisible': [('nested_bom_count', '=', 0)]}"
                    />
                </page>
            </notebook>
        </field>
    </record>

</odoo>
