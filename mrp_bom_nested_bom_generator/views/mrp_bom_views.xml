<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="template_open_bom" model="ir.actions.act_window">
        <field name="domain">[('parent_bom_id', '=', active_id)]</field>
        <field name="name">Child Bill of Materials</field>
        <field name="res_model">mrp.bom</field>
    </record>

    <record id="mrp_bom_form_view" model="ir.ui.view">
        <field name="name">mrp.bom.form.inherit</field>
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <div class="oe_button_box" name="button_box">
                <field name="parent_bom_id" invisible="1" />
                <field name="child_bom_ids" invisible="1" />
                <button
                    name="action_open_parent_bom"
                    string="Parent BOM"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-arrow-left"
                    attrs="{'invisible': [('parent_bom_id', '=', False)]}"
                />
                <button
                    name="%(template_open_bom)d"
                    string="Child BOMs"
                    type="action"
                    class="oe_stat_button"
                    icon="fa-list"
                    attrs="{'invisible': [('child_bom_ids', '=', [])]}"
                />
            </div>
            <field name="product_tmpl_id" position="after">
                <field
                    name="bom_type_nested"
                    attrs="{'invisible': [('parent_bom_id', '!=', False)]}"
                />
            </field>
            <field name="product_id" position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('bom_type_nested', '=', True)]}</attribute>
            </field>
            <notebook position="inside">
                <page
                    string="Nested BOM"
                    name="nested_boms"
                    groups="mrp.group_mrp_user"
                    attrs="{'invisible': ['|', ('product_tmpl_id', '=', False),('bom_type_nested', '=', False)]}"
                >
                    <field
                        name="nested_bom_ids"
                        widget="one2many"
                        context="{'default_bom_id': id}"
                    >
                        <tree string="Nested BOMs" editable="bottom">
                            <field name="bom_id" invisible="1" />
                            <field name="bom_product_tmpl_id" invisible="1" />
                            <field name="attribute_aggregated_ids" invisible="1" />
                            <field name="sequence" widget="handle" />
                            <field name="product_tmpl_id" />
                            <field name="product_qty" />
                            <field name="uom_id" />
                            <field
                                name="attribute_ids"
                                widget="many2many_tags"
                                options="{'no_create': True}"
                                domain="[('id', 'in', attribute_aggregated_ids)]"
                            />
                        </tree>
                    </field>
                    <field name="changed_nested_bom" invisible="1" />
                    <button
                        name="action_generate_nested_boms"
                        string="Generate Nested BOMs"
                        type="object"
                        class="oe_highlight o_expense_submit"
                        attrs="{'invisible': ['|', '|', ('nested_bom_ids', '=', []), ('child_bom_ids', '=', []), ('changed_nested_bom', '=', False)]}"
                        confirm="Nested BOMs will be recreated. All previous date will be lost. Continue?"
                    />
                    <button
                        name="action_generate_nested_boms"
                        string="Generate Nested BOMs"
                        type="object"
                        class="oe_highlight o_expense_submit"
                        attrs="{'invisible': ['|', '|', ('nested_bom_ids', '=', []), ('child_bom_ids', '!=', []), ('changed_nested_bom', '=', False)]}"
                    />
                </page>
            </notebook>
        </field>
    </record>
</odoo>
