<?xml version="1.0" ?>
<openerp>
    <data>

        <record id="view_mrp_repair_signature" model="ir.ui.view">
            <field name="name">view_repair_form_signature</field>
            <field name="model">mrp.repair</field>
            <field name="inherit_id" ref="mrp_repair.view_repair_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook" position="after">
                    <div class="oe_clear"/>
                    <label for="signature_image" class="oe_edit_only"/>
                    <h2><field name="signature_image" widget="signature" width="400" height="100"/></h2>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
